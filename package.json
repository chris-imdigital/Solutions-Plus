{
  "name": "solutions-plus-theme",
  "version": "1.0.0",
  "private": true,
  "description": "Solutions Plus Shopify Theme",
  "main": "index.js",
  "scripts": {
    "dev-init": "npm install && echo '\nâœ… Dependencies installed! Run npm run dev to start development.\n'",
    "css:build": "postcss src/styles/theme.css -o assets/theme.css",
    "css:watch": "postcss src/styles/theme.css -o assets/theme.css --watch",
    "css": "npm run css:build",
    "js:build": "node esbuild.config.js",
    "js:watch": "node esbuild.config.js --watch",
    "js": "npm run js:build",
    "dev": "concurrently \"npm run css:watch\" \"npm run js:watch\" \"shopify theme dev --store=$PROD_STORE\"",
    "build": "NODE_ENV=production npm run css:build && npm run js:build"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-scroll-lock": "3.1.5",
    "express-http-context": "1.2.4",
    "iframe-resizer": "4.3.2",
    "js-cookie": "^2.2.1",
    "lazysizes": "5.3.2",
    "micromodal": "^0.4.6",
    "minimatch": "^10.0.1",
    "normalize.css": "8.0.1",
    "postscribe": "2.0.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "cssnano": "^6.0.1",
    "esbuild": "^0.25.11",
    "glob": "^11.0.3",
    "postcss": "^8.4.27",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "postcss-nesting": "^10.1.3",
    "tailwindcss": "^3.3.3",
    "yaml": "^2.8.1"
  }
}
