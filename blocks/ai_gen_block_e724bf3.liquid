{% doc %}
  @prompt
    Create a theme with an authentic, lightweight, and mature aesthetic. Focus on clean typography, subtle color palette, and minimalist design elements that convey sophistication and authenticity.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .authentic-content-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
  }

  .authentic-content__inner-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.layout }};
    gap: {{ block.settings.spacing }}px;
    align-items: {{ block.settings.vertical_alignment }};
  }

  .authentic-content__text-{{ ai_gen_id }} {
    flex: 1;
  }

  .authentic-content__media-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
  }

  .authentic-content__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    margin-top: 0;
    margin-bottom: {{ block.settings.spacing }}px;
    font-weight: {{ block.settings.heading_weight }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    color: {{ block.settings.heading_color }};
  }

  .authentic-content__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin-top: 0;
    margin-bottom: {{ block.settings.spacing }}px;
    font-weight: {{ block.settings.subheading_weight }};
    color: {{ block.settings.subheading_color }};
  }

  .authentic-content__body-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    line-height: 1.6;
    margin-bottom: {{ block.settings.spacing }}px;
  }

  .authentic-content__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 0;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    position: relative;
    overflow: hidden;
  }

  .authentic-content__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .authentic-content__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_color }};
  }

  .authentic-content__image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.2;
  }

  .authentic-content__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border: 1px solid {{ block.settings.button_border_color }};
    font-size: {{ block.settings.button_size }}px;
    transition: all 0.3s ease;
    margin-top: {{ block.settings.spacing }}px;
  }

  .authentic-content__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .authentic-content__inner-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .authentic-content__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .authentic-content__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="authentic-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="authentic-content__inner-{{ ai_gen_id }}">
    <div class="authentic-content__text-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="authentic-content__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      
      {% if block.settings.subheading != blank %}
        <h3 class="authentic-content__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</h3>
      {% endif %}
      
      {% if block.settings.body_text != blank %}
        <div class="authentic-content__body-{{ ai_gen_id }}">{{ block.settings.body_text }}</div>
      {% endif %}
      
      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="authentic-content__button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
    
    <div class="authentic-content__media-{{ ai_gen_id }}">
      <div class="authentic-content__image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img 
            src="{{ block.settings.image | image_url: width: 1500 }}" 
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="authentic-content__image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="authentic-content__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

