{% stylesheet %}
  .inspiration-related-wrapper {
    background: #f9f8f2;
  }

  .inspiration-related {
    max-width: var(--page-width, 1280px);
    margin-left: auto;
    margin-right: auto;
    padding: 40px var(--page-margin, 40px) 72px;
  }

  .inspiration-related__heading {
    font-family: 'Urbanist', sans-serif;
    font-weight: 700;
    font-size: 32px;
    line-height: 1.1;
    letter-spacing: -1.6px;
    color: #1e2122;
    margin: 0 0 32px;
  }

  @media screen and (min-width: 750px) {
    .inspiration-related__heading {
      font-size: 40px;
      letter-spacing: -2px;
    }
  }

  .inspiration-related__grid {
    display: flex;
    flex-wrap: nowrap;
    gap: 20px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .inspiration-related__grid::-webkit-scrollbar {
    display: none;
  }

  .inspiration-related__item {
    width: 323px;
    min-width: 323px;
    flex-shrink: 0;
  }

  @media screen and (max-width: 749px) {
    .inspiration-related__item {
      width: 260px;
      min-width: 260px;
    }
  }
{% endstylesheet %}

{%- liquid
  assign related = metaobject.related_inspirations.value
-%}

{%- if related.size > 0 -%}
  <div class="inspiration-related-wrapper">
    <div
      class="inspiration-related section"
      style="
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      "
    >
      <h2 class="inspiration-related__heading">{{ section.settings.heading | default: 'You may also want to see' }}</h2>

      <div class="inspiration-related__grid">
        {%- for entry in related -%}
          <div class="inspiration-related__item">
            {% render 'inspiration-card', entry: entry %}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "t:names.inspiration_related",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:settings.heading",
      "default": "You may also want to see"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 72
    }
  ]
}
{% endschema %}
