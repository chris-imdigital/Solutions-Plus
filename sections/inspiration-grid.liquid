{% stylesheet %}
  .inspiration-grid-wrapper {
    background: #f9f8f2;
  }

  .inspiration-grid-section {
    max-width: var(--page-width, 1280px);
    margin-left: auto;
    margin-right: auto;
    padding: 0 var(--page-margin, 40px);
  }

  .inspiration-grid__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 20px;
    margin-bottom: 32px;
  }

  .inspiration-grid__title {
    font-family: 'Urbanist', sans-serif;
    font-weight: 700;
    font-size: 32px;
    line-height: 1.1;
    letter-spacing: -1.6px;
    color: #1e2122;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .inspiration-grid__title {
      font-size: 40px;
    }
  }

  .inspiration-grid__description {
    font-family: 'Lato', sans-serif;
    font-weight: 500;
    font-size: 20px;
    line-height: 1.4;
    letter-spacing: -0.6px;
    color: #585d5f;
    margin: 0;
    max-width: 670px;
  }

  .inspiration-filter {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
    margin-bottom: 32px;
  }

  .inspiration-filter__tab {
    display: inline-flex;
    align-items: center;
    padding: 4px 8px;
    border-radius: 6px;
    border: none;
    background: transparent;
    font-family: 'Lato', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.6;
    letter-spacing: -0.32px;
    color: #1e2122;
    cursor: pointer;
    transition: background-color 0.15s ease;
    white-space: nowrap;
  }

  .inspiration-filter__tab:hover {
    background: #f0f0f0;
  }

  .inspiration-filter__tab--active {
    background: #dfc1e6;
    font-weight: 700;
  }

  .inspiration-masonry {
    display: flex;
    gap: 20px;
  }

  .inspiration-masonry__column {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  [data-card-pool] {
    display: none;
  }

  .inspiration-card--short .inspiration-card__image-wrapper {
    aspect-ratio: 323 / 255;
  }

  .inspiration-card--medium .inspiration-card__image-wrapper {
    aspect-ratio: 323 / 349;
  }

  .inspiration-card--tall .inspiration-card__image-wrapper {
    aspect-ratio: 323 / 402;
  }

  .inspiration-card--xtall .inspiration-card__image-wrapper {
    aspect-ratio: 323 / 495;
  }

  .inspiration-masonry .inspiration-card__image-wrapper {
    overflow: clip;
  }

  .inspiration-masonry .inspiration-card__image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .inspiration-grid__load-more {
    display: flex;
    justify-content: center;
    margin-top: 40px;
  }

  .inspiration-grid__load-more-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 268px;
    padding: 16px 24px;
    border-radius: 6px;
    border: none;
    background: #a262ae;
    font-family: 'Lato', sans-serif;
    font-size: 16px;
    font-weight: 700;
    line-height: 1;
    letter-spacing: -0.32px;
    color: #ffffff;
    cursor: pointer;
    transition: background-color 0.15s ease;
  }

  .inspiration-grid__load-more-btn:hover {
    background: #8d549a;
  }
{% endstylesheet %}

{%- liquid
  assign categories = 'Indoor Oasis,Balcony,Small Space,Grand Garden,Suspended Garden,Backyard Retreats,Seasonal Spectacles' | split: ','
-%}

<div class="inspiration-grid-wrapper">
<div
  class="inspiration-grid-section section"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
  data-inspiration-grid
>
  <div class="inspiration-grid__header">
    {%- if section.settings.heading != blank -%}
      <h1 class="inspiration-grid__title">{{ section.settings.heading }}</h1>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <p class="inspiration-grid__description">{{ section.settings.description }}</p>
    {%- endif -%}
  </div>

  <div class="inspiration-filter">
    <button
      type="button"
      class="inspiration-filter__tab inspiration-filter__tab--active"
      data-filter-tab="all"
    >
      {{ 'inspiration.filter_all' | t }}
    </button>
    {%- for category in categories -%}
      <button
        type="button"
        class="inspiration-filter__tab"
        data-filter-tab="{{ category | handleize }}"
      >
        {{ category }}
      </button>
    {%- endfor -%}
  </div>

  <div data-card-pool>
    {%- paginate shop.metaobjects.inspiration.values by 250 -%}
      {%- for entry in shop.metaobjects.inspiration.values -%}
        <div class="inspiration-card-wrapper" data-entry-id="{{ entry.system.id | split: '/' | last }}">
          {% render 'inspiration-card', entry: entry %}
        </div>
      {%- endfor -%}
    {%- endpaginate -%}
  </div>

  <div class="inspiration-masonry" data-masonry-columns>
  </div>

  <div class="inspiration-grid__load-more">
    <button
      type="button"
      class="inspiration-grid__load-more-btn"
      data-load-more
    >
      {{ 'inspiration.load_more' | t }}
    </button>
  </div>
</div>
</div>

<script src="{{ 'inspiration-grid.min.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "t:names.inspiration_grid",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:settings.heading",
      "default": "Get Inspired"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "t:settings.description"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ]
}
{% endschema %}
