{% stylesheet %}
  .inspiration-products {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .inspiration-products__heading {
    font-family: 'Lato', sans-serif;
    font-weight: 700;
    font-size: 24px;
    line-height: 1.3;
    color: #1e2122;
    margin: 0 0 24px;
  }

  .inspiration-products__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  @media screen and (min-width: 750px) {
    .inspiration-products__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 24px;
    }
  }

  .inspiration-product-card {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .inspiration-product-card__image-wrapper {
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 10px;
  }

  .inspiration-product-card__image-wrapper img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    aspect-ratio: 1;
  }

  .inspiration-product-card__title {
    font-family: 'Lato', sans-serif;
    font-weight: 500;
    font-size: 15px;
    line-height: 1.3;
    color: #1e2122;
    margin: 0 0 2px;
  }

  .inspiration-product-card__meta {
    font-family: 'Lato', sans-serif;
    font-weight: 400;
    font-size: 13px;
    line-height: 1.4;
    color: #585d5f;
    margin: 0;
  }
{% endstylesheet %}

{%- liquid
  assign products = metaobject.products.value
-%}

{%- if products.size > 0 -%}
  <div
    class="inspiration-products section spacing-style color-{{ section.settings.color_scheme }}"
    style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <h2 class="inspiration-products__heading">{{ section.settings.heading | default: 'Shop the look' }}</h2>

    <div class="inspiration-products__grid">
      {%- for product in products -%}
        <a href="{{ product.url }}" class="inspiration-product-card">
          {%- if product.featured_image -%}
            <div class="inspiration-product-card__image-wrapper">
              {{
                product.featured_image
                | image_url: width: 600
                | image_tag:
                  widths: '200, 300, 450, 600',
                  sizes: '(min-width: 750px) 25vw, 50vw',
                  loading: 'lazy',
                  alt: product.title
              }}
            </div>
          {%- endif -%}

          <h3 class="inspiration-product-card__title">{{ product.title }}</h3>

          {%- if product.metafields.custom.common_name != blank -%}
            <p class="inspiration-product-card__meta">{{ product.metafields.custom.common_name.value }}</p>
          {%- endif -%}

          {%- if product.metafields.custom.growing_zone != blank -%}
            <p class="inspiration-product-card__meta">Zone {{ product.metafields.custom.growing_zone.value }}</p>
          {%- endif -%}
        </a>
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "t:names.inspiration_products",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:settings.heading",
      "default": "Shop the look"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ]
}
{% endschema %}
