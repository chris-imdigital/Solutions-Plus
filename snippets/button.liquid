{% doc %}
  Renders a button or link element.
  Intended for use in a block similar to the button block.

  Note: This snippet uses the `block` object from the parent block context.
  When rendered from a block file, `block` is automatically available in scope.

  @param {string} [link] - Link URL (defaults to block.settings.link)
  @param {object} [block] - The parent block object (available automatically in block context)

  @example
  {% render 'button', link: '/collections/all' %}
{% enddoc %}

{% stylesheet %}
  .link {
    text-decoration: none;
    text-decoration-color: currentcolor;

    &:hover {
      color: var(--color-primary-hover);
      text-decoration-color: transparent;
    }
  }
{% endstylesheet %}

{% assign link = link | default: block.settings.link %}

<a
  {% if link == blank %}
    role="link"
    aria-disabled="true"
  {% else %}
    href="{{ link }}"
  {% endif %}
  class="
    size-style
    {{ block.settings.style_class }}
    {{ block.settings.style_class }}--{{ block.id }}
  "
  style="{% render 'size-style', settings: block.settings %}"
  {%- if block.settings.open_in_new_tab -%}
    target="_blank"
    rel="noopener noreferrer"
  {%- endif -%}
  {{ block.shopify_attributes }}
>
  {{ block.settings.label }}
</a>
