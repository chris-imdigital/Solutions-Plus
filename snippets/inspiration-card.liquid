{% doc %}
  Renders an inspiration card for the masonry grid and related entries section.

  @param {metaobject} entry - An inspiration metaobject entry
{% enddoc %}

{% stylesheet %}
  .inspiration-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .inspiration-card__image-wrapper {
    position: relative;
    border-radius: 12px;
    overflow: clip;
  }

  .inspiration-card__image-wrapper img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .inspiration-card__body {
    padding-top: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .inspiration-card__swatches {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .inspiration-card__swatch {
    width: 32px;
    height: 32px;
    border-radius: 6px;
    border: 1px solid #fff;
    object-fit: cover;
    flex-shrink: 0;
  }

  .inspiration-card__swatch-overflow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 6px;
    background: #eeeeef;
    font-family: 'Lato', sans-serif;
    font-size: 11px;
    font-weight: 600;
    color: #585d5f;
    flex-shrink: 0;
  }

  .inspiration-card__title {
    font-family: 'Lato', sans-serif;
    font-weight: 500;
    font-size: 20px;
    line-height: 1.3;
    letter-spacing: -0.6px;
    color: #1e2122;
    margin: 0;
  }

  .inspiration-card__category {
    font-family: 'Lato', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.4;
    letter-spacing: -0.14px;
    color: #585d5f;
    margin: 0;
  }
{% endstylesheet %}

{%- if entry -%}
  {%- liquid
    assign products = entry.products.value
    assign product_count = products.size | default: 0
    assign show_count = 4
    assign overflow = product_count | minus: show_count
  -%}

  <a
    href="{{ entry.system.url }}"
    class="inspiration-card"
    data-category="{{ entry.category.value | handleize }}"
  >
    {%- if entry.hero_image.value -%}
      <div class="inspiration-card__image-wrapper">
        {{
          entry.hero_image.value
          | image_url: width: 800
          | image_tag:
            widths: '300, 450, 600, 800',
            sizes: '(min-width: 750px) 25vw, 50vw',
            loading: 'lazy',
            alt: entry.title.value
        }}
      </div>
    {%- endif -%}

    <div class="inspiration-card__body">
      {%- if product_count > 0 -%}
        <div class="inspiration-card__swatches">
          {%- for product in products limit: show_count -%}
            {%- if product.featured_image -%}
              <img
                class="inspiration-card__swatch"
                src="{{ product.featured_image | image_url: width: 64 }}"
                alt="{{ product.title | escape }}"
                width="32"
                height="32"
                loading="lazy"
              >
            {%- endif -%}
          {%- endfor -%}
          {%- if overflow > 0 -%}
            <span class="inspiration-card__swatch-overflow">+{{ overflow }}</span>
          {%- endif -%}
        </div>
      {%- endif -%}

      <h3 class="inspiration-card__title">{{ entry.title.value }}</h3>
      <p class="inspiration-card__category">{{ entry.category.value }}</p>
    </div>
  </a>
{%- endif -%}
